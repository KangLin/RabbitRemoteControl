# https://specifications.freedesktop.org/desktop-entry-spec/desktop-entry-spec-latest.html

[Desktop Entry]
Type=Application
# Icon path
# The freedesktop.org standard specifies in which order and directories programs should look for icons:
#
#    $HOME/.icons (for backwards compatibility)
#    $XDG_DATA_DIRS/icons
#    /usr/share/pixmaps
Icon=@APP_ID@
TryExec=RabbitRemoteControlApp
Exec=RabbitRemoteControlApp
Path=@CMAKE_INSTALL_PREFIX@/bin
Terminal=false
StartupNotify=true
StartupWMClass="@APP_ID@"
X-Flatpak=@APP_ID@

# https://specifications.freedesktop.org/menu-spec/latest/apa.html
Categories=Network;Utility;P2P;Qt;RemoteAccess;AudioVideo;Video;Audio;Player

# https://www.freedesktop.org/wiki/Specifications/mime-apps-spec/
# https://www.freedesktop.org/wiki/Specifications/shared-mime-info-spec/
MimeType=application/rrc

Keywords=remote desktop;remote control;rdp;vnc;ssh;player

Name=Rabbit Remote Control
GenericName=Rabbit Remote Control
Comment=Rabbit Remote Control

