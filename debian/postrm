#!/bin/bash
# postrm script for RabbitRemoteControl
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

INSTALL_ROOT=/opt/RabbitRemoteControl

case "$1" in
    purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        rm -fr $INSTALL_ROOT/log $INSTALL_ROOT/bin/log
        rm -fr /usr/share/applications/org.Rabbit.RemoteControl.desktop
        rm -fr /usr/share/pixmaps/org.Rabbit.RemoteControl.svg
        rm -fr /usr/share/applications/org.Rabbit.RemoteControl.Service.Configure.desktop
        rm -fr /usr/share/pixmaps/org.Rabbit.RemoteControl.Service.Configure.svg
        rm -fr /etc/ld.so.conf.d/RabbitRemoteControl.conf        
        ldconfig
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
