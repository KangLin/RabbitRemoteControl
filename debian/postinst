#!/bin/bash
# postinst script for RabbitRemoteControl
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

INSTALL_ROOT=/opt/RabbitRemoteControl
case "$1" in
    configure)
        mkdir -p $INSTALL_ROOT/log
        chmod 777 $INSTALL_ROOT/log
        if [ ! -d $INSTALL_ROOT/bin/log ]; then
            ln -s $INSTALL_ROOT/log $INSTALL_ROOT/bin/log
        fi
        
        if [ ! -f /usr/share/applications/org.Rabbit.RemoteControl.desktop ]; then
            if [ -f $INSTALL_ROOT/share/applications/org.Rabbit.RemoteControl.desktop ]; then
                ln -s $INSTALL_ROOT/share/applications/org.Rabbit.RemoteControl.desktop /usr/share/applications/org.Rabbit.RemoteControl.desktop
            fi
        fi
        if [ ! -f /usr/share/pixmaps/org.Rabbit.RemoteControl.svg ]; then
            if [ -f $INSTALL_ROOT/share/pixmaps/org.Rabbit.RemoteControl.svg ]; then
                if [ ! -d /usr/share/pixmaps ]; then
                    mkdir -p /usr/share/pixmaps
                fi
                ln -s $INSTALL_ROOT/share/pixmaps/org.Rabbit.RemoteControl.svg /usr/share/pixmaps/org.Rabbit.RemoteControl.svg
            fi
        fi
        
        if [ ! -f /usr/share/applications/org.Rabbit.RemoteControl.Service.Configure.desktop ]; then
            if [ -f $INSTALL_ROOT/share/applications/org.Rabbit.RemoteControl.Service.Configure.desktop ]; then
                ln -s $INSTALL_ROOT/share/applications/org.Rabbit.RemoteControl.Service.Configure.desktop /usr/share/applications/org.Rabbit.RemoteControl.Service.Configure.desktop
            fi
        fi

        if [ ! -f /usr/share/pixmaps/org.Rabbit.RemoteControl.Service.Configure.svg ]; then
            if [ -f $INSTALL_ROOT/share/pixmaps/org.Rabbit.RemoteControl.Service.Configure.svg ]; then
                if [ ! -d /usr/share/pixmaps ]; then
                    mkdir -p /usr/share/pixmaps
                fi
                ln -s $INSTALL_ROOT/share/pixmaps/org.Rabbit.RemoteControl.Service.Configure.svg /usr/share/pixmaps/org.Rabbit.RemoteControl.Service.Configure.svg
            fi
        fi

        #echo "/opt/RabbitRemoteControl/lib" > /etc/ld.so.conf.d/RabbitRemoteControl.conf
        #echo "/opt/RabbitRemoteControl/lib/`uname -m`-linux-gnu" >> /etc/ld.so.conf.d/RabbitRemoteControl.conf
        #echo "/opt/RabbitRemoteControl/bin" >> /etc/ld.so.conf.d/RabbitRemoteControl.conf
        export QT_VERSION_DIR=
        if [ -n "${QT_VERSION_DIR}" ]; then
            echo "/opt/qt${QT_VERSION_DIR}/lib" >> /etc/ld.so.conf.d/RabbitRemoteControl.conf
        fi
        ldconfig
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        rm -fr $INSTALL_ROOT/log $INSTALL_ROOT/bin/log
        rm -fr /etc/ld.so.conf.d/RabbitRemoteControl.conf
        rm -fr /usr/share/applications/org.Rabbit.RemoteControl.desktop
        rm -fr /usr/share/pixmaps/org.Rabbit.RemoteControl.svg
        rm -fr /usr/share/applications/org.Rabbit.RemoteControl.Service.Configure.desktop
        rm -fr /usr/share/pixmaps/org.Rabbit.RemoteControl.Service.Configure.svg
        ldconfig
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
