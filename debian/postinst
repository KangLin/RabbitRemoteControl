#!/bin/sh
# postinst script for RabbitRemoteControl
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        if [ ! -f /usr/share/applications/RabbitRemoteControl.desktop ]; then
            ln -s /opt/RabbitRemoteControl/share/applications/RabbitRemoteControl.desktop /usr/share/applications/RabbitRemoteControl.desktop
        fi
        if [ ! -f /usr/share/pixmaps/RabbitRemoteControl.png ]; then
            if [ ! -d /usr/share/pixmaps ]; then
                mkdir -p /usr/share/pixmaps
            fi
            ln -s /opt/RabbitRemoteControl/share/pixmaps/RabbitRemoteControl.png /usr/share/pixmaps/RabbitRemoteControl.png
        fi
        echo "/opt/RabbitRemoteControl/lib" > /etc/ld.so.conf.d/RabbitRemoteControl.conf
        echo "/opt/RabbitRemoteControl/bin" >> /etc/ld.so.conf.d/RabbitRemoteControl.conf
        export QT_VERSION_DIR=
        if [ -n "${QT_VERSION_DIR}" ]; then
            echo "/opt/qt${QT_VERSION_DIR}/lib" >> /etc/ld.so.conf.d/RabbitRemoteControl.conf
        fi
        ldconfig
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        rm -fr /usr/share/applications/RabbitRemoteControl.desktop
        rm -fr /etc/ld.so.conf.d/RabbitRemoteControl.conf
        rm -fr /usr/share/pixmaps/RabbitRemoteControl.png
        ldconfig
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
